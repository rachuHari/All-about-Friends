<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFriendActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/bg_card"
        android:divider="@drawable/divider_list"
        android:orientation="vertical"
        android:padding="@dimen/padding"
        android:showDividers="middle">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/name_margin_left"
            android:layout_toRightOf="@+id/image"

            android:text="@string/abt_my_friend" />


        <TextView
            android:id="@+id/textDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/name_margin_left"
            android:layout_toRightOf="@+id/image"
            android:maxLines="5"
            android:text="My friends name" />
    </LinearLayout>


</RelativeLayout>
